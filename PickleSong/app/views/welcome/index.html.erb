<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
<div class="section-outer">
    <div class="section-wrapper">

        <div class="col-md-9">
         <% if @results %>
            <h1><%= @first_result.title %></h1>
            <div class="vid-container">
                <iframe id="vid_frame" width="853" height="480" src="//<%= @first_result.embed_url %>" frameborder="0" allowfullscreen>
                </iframe>
            </div>
            <!--Results List-->
            <div class="vid-list-container">
                <div class="vid-list">
                    <% @alternatives.each_with_index do |result, index| %>
                        <div class="vid-item" data-embed_url="<%=result.embed_url%>">
                            <div class="thumb">
                                <img src="<%= result.thumbnail %>">
                            </div>
                            <div class="desc truncate">
                                <%= result.title %>
                            </div>
                        </div>
                        <% end %>

                </div><!--vid-list-->
            </div><!--vid-list-container-->
            <% end %>
            <div class="arrows">
    <div class="arrow-left"><i class="fa fa-chevron-left fa-lg"></i></div>
    <div class="arrow-right"><i class="fa fa-chevron-right fa-lg"></i></div>
</div>
         </div><!--col-md-9-->
    </div><!--section-wrapper-->
  <%= render "playlist_panel"%>
</div><!--section-outer-->


